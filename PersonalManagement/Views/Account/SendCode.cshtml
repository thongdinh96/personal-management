@model PersonalManagement.Models.SendCodeViewModel
@{
    ViewBag.Title = "Gửi mã xác thực";
}

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Gửi mã xác thực</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Lựa chọn cách thức lấy mã xác thực:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Gửi mã xác thực" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
