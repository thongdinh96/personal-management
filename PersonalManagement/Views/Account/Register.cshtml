@model PersonalManagement.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutPageAccount.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Tạo một tài khoản!</h1>
                    </div>
                    @using ( Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user" }) )
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "error" })

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-user", @placeholder = "Họ và tên đệm" })
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error" })
                            </div>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-user", @placeholder = "Tên" })
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "error" })
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })

                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">

                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-user", @placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })


                            </div>
                            <div class="col-sm-6">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-user", @placeholder = "Nhập lại mật khẩu" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error" })

                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Đăng ký tài khoản
                        </button>
                        <hr>
                        <a href="index.html" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> Đăng ký với Google
                        </a>
                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> Đăng ký với Facebook
                        </a>
                    }
                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="login.html">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}